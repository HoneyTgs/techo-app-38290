<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @plan, local: true) do |form| %>
    <%= render 'shared/error_messages', model: form.object %>
      <div class='field'>
        <p>タイトル</p>
        <%= form.text_field :title, placeholder: "タイトル" %>
      </div>  
      <div class='field'>
        <p>内容</p>
        <%= form.text_area :text, placeholder: "内容", rows: "10" %>
      </div>  
      <div class='field'>
        <p>カテゴリー</p>
        <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box"}) %>
      </div>  
      <%= form.submit "送信" %>
    <% end %>
  </div>
</div>
<div class='footer'>
  <%= link_to 'もどる', root_path %>
</div>